# Vindinium Configuration
# Copy this file to .env and fill in your values

# Server URL (e.g., http://localhost for local server)
SERVER=<vindinium-server-url>

# Your API key from the Vindinium server
KEY=<your-api-key>

# Your hero's display name
HERO_NAME=MyBot

# Bot to use (RandomBot, MinerBot, AggressiveBot, MinimaxBot, ...)
# Default: MinerBot
BOT=MinerBot

# Game mode (training or arena)
# Default: training
MODE=training

# Number of turns for training mode (10-300)
# Default: 10
N_TURNS=10

# Open browser automatically (true or false)
# Default: true
OPEN_BROWSER=true

# Debug mode - log each move and timing (true or false)
# Default: false
DEBUG=false

